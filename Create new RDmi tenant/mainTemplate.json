{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "RDBrokerURL": {
            "type": "String",
            "metadata": {
                "description": "provide RdbrokerURI"
            }
        },
        "hosterAdminUPN": {
            "type": "String",
            "metadata": {
                "description": "The UPN that has rights in the RDS HosterAdmin to create the Tenant. For example, “admin1@contoso.com”"
            }
        },
        "HosterAdminPassword": {
            "type": "SecureString",
            "metadata": {
                "description": "HosterAdminPassword for the Azure Partner Account."
            }
        },
        "AadTenantId": {
            "type": "String",
            "metadata": {
                "description": "AadTenantId for the Azure Tenant Account."
            }
        },
        "TenantName": {
            "type": "String",
            "metadata": {
                "description": "Provide Tenant Name"
            }
        },
        "TenantFriendlyName": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Provide Tenant FriendlyName"
            }
        },
        "TenantDescription": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Provide Tenant Description"
            }
        },
        "HostpoolName": {
            "type": "String",
            "metadata": {
                "description": "Provide Hostpool Name"
            }
        },
        "HostpoolFriendlyName": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Provide Hostpool FriendlyName"
            }
        },
        "HostpoolDescription": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Provide Hostpool Description"
            }
        },
        "baseUrl": {
            "type": "string",
            "metadata": {
              "description": "The base URL for RDmi info",
              "artifactsBaseUrl": ""
            },
            "defaultValue": "https://raw.githubusercontent.com/sreenathakk/testrepository/master/Create%20new%20RDmi%20tenant/"
        }
    },
    "variables": {
        "nicName": "myVMNic",
        "addressPrefix": "10.0.0.0/16",
        "vmsubscriptionId":"[subscription().subscriptionId]",
        "subnetName": "Subnet",
        "subnetPrefix": "10.0.0.0/24",
        "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), variables('subnetName'))]",
        "vmName": "MyVM",
        "tenantFriendlyName":"[if(equals(parameters('TenantFriendlyName'),'empty'), json('null'), parameters('TenantFriendlyName'))]",
        "tenantDescription":"[if(equals(parameters('TenantDescription'),'empty'), json('null'), parameters('TenantDescription'))]",
        "hostPoolFriendlyName":"[if(equals(parameters('HostpoolFriendlyName'),'empty'), json('null'), parameters('HostpoolFriendlyName'))]",
        "hostPoolDescription":"[if(equals(parameters('HostpoolDescription'),'empty'), json('null'), parameters('HostpoolDescription'))]",
        "virtualNetworkName": "MyVNET",
        "publicIPAddressName": "myPublicIP",
        "dnsNameForPublicIP": "[uniqueString(resourceGroup().name)]",
        "adminUsername": "vmadmin",
        "adminPassword": "Welcome@12345",
        "resourcegroupname": "[resourceGroup().name]",
        "scriptURI": "[concat(parameters('baseUrl'),'/Scripts/Script.ps1')]",
        "psModuleURI": "[concat(parameters('baseUrl'),'/Scripts/PSModules.zip')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('publicIPAddressName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[variables('dnsNameForPublicIP')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('virtualNetworkName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "[variables('subnetPrefix')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('nicName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName'))]"
                            },
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[variables('publicIPAddressName')]",
                "[variables('virtualNetworkName')]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('vmName')]",
            "apiVersion": "2016-04-30-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D1_v2"
                },
                "osProfile": {
                    "computerName": "[variables('vmName')]",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[variables('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "extensions",
                    "name": "CustomScriptExtension",
                    "apiVersion": "2016-04-30-preview",
                    "location": "[resourceGroup().location]",
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.8",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "[variables('scriptURI')]"
                            ],
                            "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File Script.ps1', ' -RDBrokerURI \"', parameters('RDBrokerURL'), '\"',' ',  ' -SubscriptionId \"', variables('vmsubscriptionId'), '\"',' ', ' -AadTenantId \"', parameters('AadTenantId'), '\"',' ', ' -TenantName \"', parameters('TenantName'), '\"',' ', ' -FriendlyName \"', variables('tenantFriendlyName'), '\"',' ', ' -Description \"', variables('tenantDescription'), '\"',' ',' -HostPoolName \"', parameters('HostPoolName'), '\"',' ', ' -HostPoolFriendlyName \"', variables('hostPoolFriendlyName'), '\"',' ', ' -HostPoolDescription \"', variables('hostPoolDescription'), '\"',' ', ' -Username \"', parameters('hosterAdminUPN'), '\"',' ', ' -password \"', parameters('HosterAdminPassword'), '\"',' ',' -vmUserName \"', variables('adminUsername'), '\"',' ', ' -vmPassword \"', variables('adminPassword'), '\"',' ', '-resourceGroupName \"', variables('resourcegroupname'), '\"',' ', ' -fileURI \"', variables('psModuleURI'), '\"')]"
                        }
                    },
                    "dependsOn": [
                        "[variables('vmName')]"
                    ]
                }
            ],
            "dependsOn": [
                "[variables('nicName')]"
            ]
        }
    ]
}